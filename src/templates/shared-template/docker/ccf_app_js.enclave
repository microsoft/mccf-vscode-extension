# Build
FROM mcr.microsoft.com/ccf/app/dev:4.0.14-sgx as builder

# Run
FROM mcr.microsoft.com/ccf/app/run-js:4.0.14-sgx

COPY --from=builder /opt/ccf_sgx/bin/* /app/

# Copy configs
COPY ./configs/constitution/*.js /app/
COPY ./configs/cchost/cchost_config_virtual_js.json /app/

WORKDIR /app/

RUN /app/keygenerator.sh --name member0 --gen-enc-key

EXPOSE 8080/tcp

CMD ["/usr/bin/cchost", "--config", "/app/cchost_config_enclave_js.json"]
